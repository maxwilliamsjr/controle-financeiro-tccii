<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background">

    <TextView
        android:id="@+id/txtTituloPopupDataInicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data de Início da Fatura"
        android:textStyle="bold"
        android:textColor="@color/textPrimary"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/editPopupDataInicio"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Data de início"
        android:focusable="false"
        android:clickable="false"
        android:cursorVisible="false"
        android:inputType="none"
        android:textColor="@color/textSecondary"
        android:background="@drawable/bg_edittext_underline"
        android:paddingStart="8dp"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/txtTituloPopupDataFechamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data de Fechamento da Fatura"
        android:textStyle="bold"
        android:textColor="@color/textPrimary"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/editPopupDataFechamento"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Selecione a data de fechamento"
        android:focusable="false"
        android:clickable="true"
        android:inputType="none"
        android:textColor="@color/textPrimary"
        android:background="@drawable/bg_edittext_underline"
        android:paddingStart="8dp"
        android:layout_marginBottom="32dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">

        <Button
            android:id="@+id/btnCancelarPopup"
            style="@style/ButtonCancel"
            android:text="Cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp" />

        <Button
            android:id="@+id/btnAdicionarPopup"
            style="@style/AppButton"
            android:text="Confirmar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
